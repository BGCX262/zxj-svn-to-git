<?xml version="1.0" encoding="ISO-8859-1"?>
<pageflow>
	<name>zXStdQS</name>
	<helpid>zXStdQS_helpid</helpid>
	<htmldebug>zOff</htmldebug>
	<startaction>asp.start</startaction>
	<propagateqs>zYes</propagateqs>
	<version><![CDATA[V1.2]]></version>
	<lastchange><![CDATA[BD11NOV04 - Added support for description.load]]></lastchange>
	<comment><![CDATA[Standard zX QS pageflow]]></comment>
	<baseurl>
		<url><![CDATA[../jsp/zXStdQS.jsp]]></url>
		<urltype>zFixed</urltype>
	</baseurl>
	<actions>
		<action type="zSearchForm">
			<helpid>zXStdQS__helpid</helpid>
			<name>search</name>
			<title>
				<EN><![CDATA[#entityLabel.entity# quick search]]></EN>
			</title>
			<left>0</left>
			<top>0</top>
			<link>
			</link>
			<formaction>
				<urltype>zAction</urltype>
			</formaction>
			<entities>
				<item>
					<name>entity</name>
					<entity><![CDATA[#qs.-entity]]></entity>
					<pk>#qs.-pk</pk>
					<wheregroup>QSSearch</wheregroup>
					<selecteditgroup><![CDATA[All]]></selecteditgroup>
					<selectlistgroup>+,Description.load</selectlistgroup>
					<pkwheregroup><![CDATA[#qs.-whereGroup]]></pkwheregroup>
					<listgroup><![CDATA[Description]]></listgroup>
					<resolvefk>zNo</resolvefk>
					<allownew>zYes</allownew>
				</item>
			</entities>
			<stickyqsaction></stickyqsaction>
			<cached>zNo</cached>
			<buttons>
				<item>
					<name>zSubmit</name>
					<startsubmenu>zNo</startsubmenu>
					<url>
						<url><![CDATA[search.query]]></url>
						<urltype>zAction</urltype>
						<querystring>
							<item>
								<source><![CDATA[1]]></source>
								<destination><![CDATA[-pg]]></destination>
							</item>
							<item>
								<source><![CDATA[]]></source>
								<destination><![CDATA[-qs]]></destination>
							</item>
						</querystring>
					</url>
					<label>
						<EN><![CDATA[Search]]></EN>
					</label>
				</item>
			</buttons>
			<refs>
				<item>
					<name>CLOSE</name>
					<startsubmenu>zNo</startsubmenu>
					<url>
						<url><![CDATA[top.window.close()]]></url>
						<urltype>zFixed</urltype>
						<frameno>notouch</frameno>
					</url>
					<label>
						<EN><![CDATA[Close]]></EN>
					</label>
				</item>
			</refs>
			<savesearch>zNo</savesearch>
		</action>
		<action type="zQuery">
			<helpid>zXStdQS_query_helpid</helpid>
			<name>search.query</name>
			<entityaction>search</entityaction>
			<left>0</left>
			<top>0</top>
			<link>
				<action><![CDATA[search.list]]></action>
			</link>
			<formaction>
				<urltype>zAction</urltype>
			</formaction>
			<stickyqsaction></stickyqsaction>
			<cached>zNo</cached>
			<resolvefk>zYes</resolvefk>
			<distinct>zNo</distinct>
			<searchform>zNo</searchform>
			<outerjoin>zNo</outerjoin>
			<whereclauseonly>zNo</whereclauseonly>
			<querytype>zSearchForm</querytype>
		</action>
		<action type="zListForm">
			<helpid>zXStdQS_list_helpid</helpid>
			<name>search.list</name>
			<title>
				<EN><![CDATA[#entityLabel.entity# quick search result #expr.if(isnull(qs('-qs')),'',concat('using "',qs('-qs'),'"'))]]></EN>
			</title>
			<entityaction>search</entityaction>
			<left>0</left>
			<top>0</top>
			<link>
			</link>
			<formaction>
				<urltype>zAction</urltype>
			</formaction>
			<stickyqsaction></stickyqsaction>
			<cached>zNo</cached>
			<refs>
				<item>
					<name>zBack</name>
					<startsubmenu>zNo</startsubmenu>
					<url>
						<url><![CDATA[search]]></url>
						<urltype>zAction</urltype>
					</url>
				</item>
			</refs>
			<resolvefk>zYes</resolvefk>
			<width>100%</width>
			<qsentity>-e</qsentity>
			<qspk>-pk</qspk>
			<maxrows>150</maxrows>
			<autocheck>zNo</autocheck>
			<multilist>zNo</multilist>
			<addparitytoclass>zYes</addparitytoclass>
			<url>
				<url><![CDATA[zXStdPopup('#qs.-s#', '#qs.-pageflow#', '#qs.-action#', '#pk.entity#')]]></url>
				<urltype>zFixed</urltype>
				<frameno>notouch</frameno>
			</url>
			<resorturl>
				<url><![CDATA[list]]></url>
				<urltype>zAction</urltype>
				<querystring>
					<item>
						<source><![CDATA[1]]></source>
						<destination><![CDATA[-pg]]></destination>
					</item>
				</querystring>
			</resorturl>
			<pagingurl>
				<url><![CDATA[list]]></url>
				<urltype>zAction</urltype>
			</pagingurl>
		</action>
		<action type="zListForm">
			<helpid>zXStdQS_list_helpid</helpid>
			<name>list</name>
			<title>
				<EN><![CDATA[#entityLabel.entity# quick search result #expr.if(isnull(qs('-qs')),'',concat('using "',qs('-qs'),'"'))]]></EN>
			</title>
			<entityaction>search</entityaction>
			<left>0</left>
			<top>0</top>
			<link>
			</link>
			<formaction>
				<urltype>zAction</urltype>
			</formaction>
			<stickyqsaction></stickyqsaction>
			<cached>zNo</cached>
			<refs>
				<item>
					<name>SEARCH</name>
					<startsubmenu>zNo</startsubmenu>
					<url>
						<url><![CDATA[search]]></url>
						<urltype>zAction</urltype>
					</url>
					<label>
						<EN><![CDATA[Search]]></EN>
					</label>
				</item>
			</refs>
			<resolvefk>zYes</resolvefk>
			<width>100%</width>
			<qsentity>-e</qsentity>
			<qspk>-pk</qspk>
			<maxrows>150</maxrows>
			<autocheck>zNo</autocheck>
			<multilist>zNo</multilist>
			<addparitytoclass>zYes</addparitytoclass>
			<url>
				<url><![CDATA[zXStdPopup('#qs.-s#', '#qs.-pageflow#', '#qs.-action#', '#pk.entity#');top.window.close();]]></url>
				<urltype>zFixed</urltype>
				<frameno>notouch</frameno>
			</url>
			<resorturl>
				<url><![CDATA[list]]></url>
				<urltype>zAction</urltype>
				<querystring>
					<item>
						<source><![CDATA[1]]></source>
						<destination><![CDATA[-pg]]></destination>
					</item>
				</querystring>
			</resorturl>
			<pagingurl>
				<url><![CDATA[list]]></url>
				<urltype>zAction</urltype>
			</pagingurl>
		</action>
		<action type="zNull">
			<helpid>zXStdQS__helpid</helpid>
			<name>show</name>
			<left>0</left>
			<top>0</top>
			<link>
			</link>
			<formaction>
				<urltype>zAction</urltype>
			</formaction>
			<tags>
				<zXJavascript><![CDATA[zXStdPopup('#qs.-s#', '#qs.-pageflow#', '#qs.-action#', '#qs.-pk#');top.window.close()]]></zXJavascript>
			</tags>
			<stickyqsaction></stickyqsaction>
			<cached>zNo</cached>
		</action>
	</actions>
</pageflow>
